@model ShoppingCart
@{
    decimal  totalAmount = 0;
    int totalQuantity = 0;
}

<style>
    .table-bordered th, .table-bordered td {
        border: 5px solid #dee2e6 !important;
    }

    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: #212529;
    }

    th {
        vertical-align: bottom;
        border-bottom: 2px solid #dee2e6;
    }

    td, th {
        padding: .75rem;
        vertical-align: top;
        border-top: 1px solid #dee2e6;
    }

    .btn-danger {
        color: #fff;
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-primary {
        color: #fff;
        background-color: #007bff;
        border-color: #007bff;
    }

    .empty-cart {
        font-size: 20px;
        color: black;
        text-align: center;
        position: relative;
        margin-top: 20px;
        margin-bottom: 20px;
    }

    .empty-cart-icon {
        font-size: 3rem;
        margin-bottom: 10px;
    }

    .empty-cart-text {
        display: block;
    }
</style>
